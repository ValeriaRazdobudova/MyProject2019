@model NTCService.Models.IndexViewModel
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Управління";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Зміна параметрів облікового запису</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>E-mail:</dt>
        <dd>@User.Identity.GetUserName()</dd>
        <dt>Пароль:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Зміна пароля", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Створити", "SetPassword")
            }
            ]
        </dd>
    </dl>
</div>