@model NTCService.NTCClients

@{
    ViewBag.Title = "Видалення";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Видалити</h2>

<h3>Ви впевнені?</h3>
<div>
    <h4>Клієнт</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("ПІБ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name_NTCclient)
        </dd>

        <dt>
            @Html.DisplayName("Тел")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.phone_number_NTCclient)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email_NTCclient)
        </dd>

        <dt>
            @Html.DisplayName("Skype ID")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.skype_NTCclient)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Видалити" class="btn btn-default" /> |
            @Html.ActionLink("Повернутися до списку", "Index")
        </div>
    }
</div>
